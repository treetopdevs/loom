#!/bin/sh

# Ensure ~/.loom directory exists for database and config
LOOM_HOME="${LOOM_HOME:-$HOME/.loom}"
mkdir -p "$LOOM_HOME"

# Set database path if not already set
export LOOM_DB_PATH="${LOOM_DB_PATH:-$LOOM_HOME/loom.db}"

# Release cookie for distributed Erlang (not typically needed for Loom)
export RELEASE_COOKIE="${RELEASE_COOKIE:-loom_<%= @release.version %>}"
export RELEASE_DISTRIBUTION="${RELEASE_DISTRIBUTION:-none}"
